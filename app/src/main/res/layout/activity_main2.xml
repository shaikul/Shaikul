<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <ImageView
        android:id="@+id/image_colizei"
        android:layout_width="344dp"
        android:layout_height="168dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/kolizei"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/image_colizei"
        app:layout_constraintTop_toTopOf="@+id/image_colizei"
        app:layout_constraintBottom_toBottomOf="@+id/image_colizei"
        android:text="The Colosseum"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_marginTop="114dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/image_colizei"
        app:layout_constraintTop_toTopOf="@+id/image_colizei"
        app:layout_constraintBottom_toBottomOf="@+id/image_colizei"
        android:text="One of the most recognizable sites in the world"
        android:textColor="#999999"
        android:textSize="12sp"
        android:layout_marginTop="137dp"/>

    <FrameLayout
        android:id="@+id/pervyi_kvadrat"
        android:layout_width="112dp"
        android:layout_height="93dp"
        android:layout_marginStart="32dp"
        android:background="@drawable/kvadrat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_colizei" />

    <FrameLayout
        android:id="@+id/vtoroi_kvadrat"
        android:layout_width="112dp"
        android:layout_height="93dp"
        android:layout_marginStart="12dp"
        android:background="@drawable/kvadrat"
        app:layout_constraintStart_toEndOf="@id/pervyi_kvadrat"
        app:layout_constraintTop_toBottomOf="@+id/image_colizei" />

    <FrameLayout
        android:id="@+id/tretiy_kvadrat"
        android:layout_width="112dp"
        android:layout_height="93dp"
        android:layout_marginStart="12dp"
        android:background="@drawable/kvadrat"
        app:layout_constraintStart_toEndOf="@id/vtoroi_kvadrat"
        app:layout_constraintTop_toBottomOf="@+id/image_colizei" />

    <ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="@id/pervyi_kvadrat"
    app:layout_constraintBottom_toBottomOf="@id/pervyi_kvadrat"
    app:layout_constraintStart_toStartOf="@id/pervyi_kvadrat"
    app:layout_constraintEnd_toEndOf="@id/pervyi_kvadrat"
    android:background="@drawable/camera"
    />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/vtoroi_kvadrat"
        app:layout_constraintBottom_toBottomOf="@id/vtoroi_kvadrat"
        app:layout_constraintStart_toStartOf="@id/vtoroi_kvadrat"
        app:layout_constraintEnd_toEndOf="@id/vtoroi_kvadrat"
        android:background="@drawable/gruppy"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tretiy_kvadrat"
        app:layout_constraintBottom_toBottomOf="@id/tretiy_kvadrat"
        app:layout_constraintStart_toStartOf="@id/tretiy_kvadrat"
        app:layout_constraintEnd_toEndOf="@id/tretiy_kvadrat"
        android:background="@drawable/google"
        />

    <TextView
        android:id="@+id/numbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/vtoroi_kvadrat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="88dp"
        android:text="312"
        android:textSize="48sp"
        android:textColor="#000000"
        />
    <Button
        android:layout_width="190dp"
        android:layout_height="44dp"
        app:layout_constraintTop_toBottomOf="@id/numbers"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="36dp"
        android:onClick="click"
        android:text="Перейти"
        android:textColor="@color/white"
        android:background="@android:color/holo_red_light"/>



</androidx.constraintlayout.widget.ConstraintLayout>